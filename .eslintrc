{
  "extends": ["react-app", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "semi": ["warn", "always"],
    "no-mixed-operators": [
      "warn",
      {
        "groups": [
          ["&", "|", "^", "~", "<<", ">>", ">>>"],
          ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
          ["in", "instanceof"]
        ],
        "allowSamePrecedence": true
      }
    ],
    "no-unused-vars": "warn",
    "prettier/prettier": "warn",
    "jsx-a11y/href-no-hash": "off"
  }
}